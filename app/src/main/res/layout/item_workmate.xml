<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        android:layout_gravity="center_horizontal"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/workmateImageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/restaurantChoice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cardViewProfilePicture"
        app:layout_constraintBottom_toBottomOf="@id/cardViewProfilePicture"
        app:layout_constraintStart_toEndOf="@id/cardViewProfilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:src="@drawable/horizontal_bar"
        app:layout_constraintStart_toStartOf="@id/restaurantChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"
        app:tint="#1A000000"/>


</androidx.constraintlayout.widget.ConstraintLayout>
